<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:id="@+id/list_item_crime_solved_check"
    android:padding="4dp"/>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_toLeftOf="@id/list_item_crime_solved_check"
     android:textStyle="bold"
     android:id="@+id/list_item_crime_title_text"
     android:padding="4dp"
     tools:text="Crime Title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_crime_solved_check"
        android:layout_below="@id/list_item_crime_title_text"
        android:id="@+id/list_item_crime_date_text"
        android:padding="4dp"
        tools:text="Crime Date"/>
</RelativeLayout>